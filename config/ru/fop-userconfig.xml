<?xml version="1.0"?>

<!--
  fop-userconfig.xml
  ==================

  Copy this file to your language subdirectory and edit it.
  Consult "Using non-Western fonts" for detailed instructions.
  See http://www.firebirdsql.org/manual (or /pdfmanual).
-->

<fop version="1.0">

  <!-- Base for resolving relative font URLs
       NOTE: Unused in the gradle-based build -->
  <font-base>file://../../../config/ru</font-base>

  <!-- Information for specific renderers -->
  <!-- Uses renderer mime type for renderers -->
  <renderers>

    <renderer mime="application/pdf">

      <fonts>
        <!-- embedded fonts -->
        <!--
          This information must exactly match the font specified
          in the fo file. Otherwise it will use a default font.
        -->

        <font metrics-url="times.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/times.ttf">
          <font-triplet name="Times" style="normal" weight="normal"/>
        </font>
        <font metrics-url="timesbd.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/timesbd.ttf">
          <font-triplet name="Times" style="normal" weight="bold"/>
        </font>
        <font metrics-url="timesbi.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/timesbi.ttf">
          <font-triplet name="Times" style="italic" weight="bold"/>
        </font>
        <font metrics-url="timesi.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/timesi.ttf">
          <font-triplet name="Times" style="italic" weight="normal"/>
        </font>

        <font metrics-url="verdana.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/verdana.ttf">
          <font-triplet name="Verdana" style="normal" weight="normal"/>
        </font>
        <font metrics-url="verdanab.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/verdanab.ttf">
          <font-triplet name="Verdana" style="normal" weight="bold"/>
        </font>
        <font metrics-url="verdanaz.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/verdanaz.ttf">
          <font-triplet name="Verdana" style="italic" weight="bold"/>
        </font>
        <font metrics-url="verdanai.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/verdanai.ttf">
          <font-triplet name="Verdana" style="italic" weight="normal"/>
        </font>

        <font metrics-url="cour.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/cour.ttf">
          <font-triplet name="Courier" style="normal" weight="normal"/>
        </font>
        <font metrics-url="courbd.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/courbd.ttf">
          <font-triplet name="Courier" style="normal" weight="bold"/>
        </font>
        <font metrics-url="courbi.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/courbi.ttf">
          <font-triplet name="Courier" style="italic" weight="bold"/>
        </font>
        <font metrics-url="couri.xml" kerning="yes"
              embed-url="file:///c:/windows/fonts/couri.ttf">
          <font-triplet name="Courier" style="italic" weight="normal"/>
        </font>

      </fonts>

    </renderer>
  
  </renderers>

</fop>
