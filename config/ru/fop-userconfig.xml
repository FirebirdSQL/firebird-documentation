<!--
  fop-userconfig.xml
  ==================

  Copy this file to your language subdirectory and edit it.
  Consult "Using non-Western fonts" for detailed instructions.
  See http://www.firebirdsql.org/manual (or /pdfmanual).
-->


<configuration>

  <!-- fontBaseDir: replace "xx" with your language code
       and UNCOMMENT the entry!                          -->
  <entry>
    <key>fontBaseDir</key>
    <value>file://../../../config/ru</value>
  </entry>

  <fonts>
    <!-- Insert font elements here -->

    <font metrics-file="times.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/times.ttf">
      <font-triplet name="Times" style="normal" weight="normal"/>
    </font>
    <font metrics-file="timesbd.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/timesbd.ttf">
      <font-triplet name="Times" style="normal" weight="bold"/>
    </font>
    <font metrics-file="timesbi.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/timesbi.ttf">
      <font-triplet name="Times" style="italic" weight="bold"/>
    </font>
    <font metrics-file="timesi.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/timesi.ttf">
      <font-triplet name="Times" style="italic" weight="normal"/>
    </font>

    <font metrics-file="verdana.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/verdana.ttf">
      <font-triplet name="Verdana" style="normal" weight="normal"/>
    </font>
    <font metrics-file="verdanab.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/verdanab.ttf">
      <font-triplet name="Verdana" style="normal" weight="bold"/>
    </font>
    <font metrics-file="verdanaz.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/verdanaz.ttf">
      <font-triplet name="Verdana" style="italic" weight="bold"/>
    </font>
    <font metrics-file="verdanai.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/verdanai.ttf">
      <font-triplet name="Verdana" style="italic" weight="normal"/>
    </font>

    <font metrics-file="cour.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/cour.ttf">
      <font-triplet name="Courier" style="normal" weight="normal"/>
    </font>
    <font metrics-file="courbd.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/courbd.ttf">
      <font-triplet name="Courier" style="normal" weight="bold"/>
    </font>
    <font metrics-file="courbi.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/courbi.ttf">
      <font-triplet name="Courier" style="italic" weight="bold"/>
    </font>
    <font metrics-file="couri.xml" kerning="yes"
          embed-file="file:///c:/windows/fonts/couri.ttf">
      <font-triplet name="Courier" style="italic" weight="normal"/>
    </font>

  </fonts>

</configuration>
